<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="MyTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--Doesn't work for some reason, always makes nested blocks in dialog, don't know why... -->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>-->
    </style>

	<!-- Define my custom ActionBar colors! -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#080e3a</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:logo">@drawable/logo</item>
    </style>
    
    <style name="MyTitleTextStyle">
      <!-- Make title invisible by now -->
      <item name="android:textSize">0sp</item>
      <item name="android:textColor">#00000000</item>
    </style>
    
    <style name="MyAlertDialogStyle" parent="@android:style/Theme.Holo.Dialog">

   </style>

</resources>

